<!-- SweetAlert2 -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
  function editarUsuario() {
    Swal.fire({
      title: 'Editar usuario',
      text: 'Aquí redirigirías al formulario de edición.',
      icon: 'info',
      confirmButtonText: 'Ok'
    });
  }

  function darDeBaja() {
    Swal.fire({
      title: "¿Estás seguro?",
      text: "Esta acción dará de baja al usuario.",
      icon: "warning",
      input: "password",
      inputPlaceholder: "Introduce tu contraseña",
      showCancelButton: true,
      confirmButtonColor: "#d33",
      cancelButtonColor: "#3085d6",
      confirmButtonText: "Sí, dar de baja",
      cancelButtonText: "Cancelar",
      preConfirm: (password) => {
        if (!password) {
          Swal.showValidationMessage("Debes ingresar la contraseña");
        }
        return password;
      }
    }).then((result) => {
      if (result.isConfirmed) {
        Swal.fire("Éxito", "Usuario dado de baja correctamente", "success");
      }
    });
  }
</script>


