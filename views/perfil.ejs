<%- include('Plantilla/Inicio') %>

<%
// Evita ReferenceError si no te mandaron la variable
const hasUsuario = (typeof usuario !== 'undefined' && usuario);
const u = hasUsuario ? usuario : null;

const foto = u?.foto || `https://i.pravatar.cc/150?u=${u?.id_usuario || 'default'}`;
const fechaNac = u?.fecha_nacimiento
  ? new Date(u.fecha_nacimiento).toLocaleDateString('es-MX')
  : '—';
const activo = (u?.activo === 1 || u?.activo === true);
%>

<main id="perfil-usuario" class="flex-1 p-4 md:p-6 bg-gray-100 bg-grid">
  <!-- Encabezado -->
  <section class="mb-6">
    <h1 class="text-xl md:text-2xl font-semibold text-gray-900">Perfil de usuario</h1>
    <p class="text-sm text-gray-500">Consulta la información completa del usuario y su historial de accesos.</p>
  </section>

  <% if (!u) { %>
    <section class="bg-white rounded-2xl border border-gray-200 p-5">
      <p class="text-sm text-red-600">No se encontró el usuario.</p>
    </section>
  <% } else { %>
    <!-- Datos del usuario -->
    <section class="bg-white rounded-2xl border border-gray-200 p-5 mb-6">
      <div class="flex flex-col gap-4 md:flex-row md:items-start">
        <!-- Avatar + estado -->
        <div class="flex-shrink-0">
          <div class="relative">
            <img src="<%= foto %>" alt="Foto de perfil"
                class="w-32 h-32 rounded-2xl border-4 border-white shadow-xl object-cover">
            <span class="absolute -bottom-2 left-1 inline-flex items-center gap-1 rounded-full bg-white px-2 py-0.5 shadow ring-1 ring-black/5">
              <span class="h-2.5 w-2.5 rounded-full <%= activo ? 'bg-green-500' : 'bg-red-500' %>"></span>
              <span class="text-xs font-medium <%= activo ? 'text-green-700' : 'text-red-700' %>"><%= activo ? 'Activo' : 'Inactivo' %></span>
            </span>
          </div>
        </div>

        <!-- Tarjeta principal -->
        <div class="flex-1">
          <div class="rounded-2xl border border-gray-200 bg-white p-5 shadow-sm">
            <!-- Encabezado -->
            <div class="mb-4 flex flex-col gap-2 sm:flex-row sm:items-center sm:justify-between">
              <div>
                <h2 class="text-xl font-semibold text-gray-900">
                  <%= [u?.nombre, u?.apellido_paterno, u?.apellido_materno].filter(Boolean).join(' ') || '—' %>
                </h2>
                <div class="mt-1 flex flex-wrap items-center gap-2">
                  <span class="inline-flex items-center rounded-full bg-blue-50 px-2.5 py-0.5 text-xs font-medium text-blue-700 ring-1 ring-blue-100">
                    <%= u?.tipo_usuario || 'Usuario registrado' %>
                  </span>
                </div>
              </div>

              <!-- Acciones -->
              <div class="flex flex-wrap gap-2">
                <button type="button" data-open-modal="modalAsignarHorario"
                  class="inline-flex items-center gap-2 rounded-lg bg-green-600 px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-emerald-700 focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:ring-offset-2">
                  <svg class="h-4 w-4" viewBox="0 0 24 24" fill="none"><path d="M5 12h14M12 5v14" stroke="currentColor" stroke-width="1.8" stroke-linecap="round"/></svg>
                  Asignar horario
                </button>
                <a href="/editusuario/<%= u?.id_usuario %>"
                  class="inline-flex items-center rounded-lg bg-blue-600 px-4 py-2 text-sm font-medium text-white hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">
                  Editar
                </a>
                <button onclick="darDeBaja(<%= u?.id_usuario %>)"
                  class="inline-flex items-center rounded-lg bg-red-600 px-4 py-2 text-sm font-medium text-white hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2">
                  Dar de baja
                </button>
              </div>
            </div>

            <!-- Datos en grid legible -->
            <dl class="grid grid-cols-1 gap-3 md:grid-cols-2">
              <div class="rounded-xl border border-gray-200 p-3">
                <dt class="text-xs font-medium uppercase tracking-wide text-gray-500">CURP</dt>
                <dd class="mt-1 text-sm text-gray-900"><%= u?.curp || '—' %></dd>
              </div>
              <div class="rounded-xl border border-gray-200 p-3">
                <dt class="text-xs font-medium uppercase tracking-wide text-gray-500">RFC</dt>
                <dd class="mt-1 text-sm text-gray-900"><%= u?.rfc || '—' %></dd>
              </div>
              <div class="rounded-xl border border-gray-200 p-3">
                <dt class="text-xs font-medium uppercase tracking-wide text-gray-500">NSS</dt>
                <dd class="mt-1 text-sm text-gray-900"><%= u?.nss || '—' %></dd>
              </div>
              <div class="rounded-xl border border-gray-200 p-3">
                <dt class="text-xs font-medium uppercase tracking-wide text-gray-500">Correo</dt>
                <dd class="mt-1 text-sm text-gray-900 break-all"><%= u?.correo || '—' %></dd>
              </div>
              <div class="rounded-xl border border-gray-200 p-3">
                <dt class="text-xs font-medium uppercase tracking-wide text-gray-500">Teléfono</dt>
                <dd class="mt-1 text-sm text-gray-900"><%= u?.telefono || '—' %></dd>
              </div>
              <div class="rounded-xl border border-gray-200 p-3">
                <dt class="text-xs font-medium uppercase tracking-wide text-gray-500">Sexo</dt>
                <dd class="mt-1 text-sm text-gray-900"><%= u?.sexo || '—' %></dd>
              </div>
              <div class="rounded-xl border border-gray-200 p-3">
                <dt class="text-xs font-medium uppercase tracking-wide text-gray-500">Fecha de nacimiento</dt>
                <dd class="mt-1 text-sm text-gray-900"><%= fechaNac %></dd>
              </div>
              <div class="rounded-xl border border-gray-200 p-3">
                <dt class="text-xs font-medium uppercase tracking-wide text-gray-500">Estado civil</dt>
                <dd class="mt-1 text-sm text-gray-900"><%= u?.estado_civil || '—' %></dd>
              </div>
              <div class="rounded-xl border border-gray-200 p-3">
                <dt class="text-xs font-medium uppercase tracking-wide text-gray-500">Puesto</dt>
                <dd class="mt-1 text-sm text-gray-900"><%= u?.nombre_puesto || '—' %></dd>
              </div>
              <div class="rounded-xl border border-gray-200 p-3">
                <dt class="text-xs font-medium uppercase tracking-wide text-gray-500">Horario</dt>
                <dd class="mt-1 text-sm text-gray-900"><%= u?.nombre_horario || '—' %></dd>
              </div>
            </dl>

            <!-- Domicilio full width -->
            <div class="mt-4 rounded-xl border border-gray-200 p-3">
              <dt class="text-xs font-medium uppercase tracking-wide text-gray-500">Domicilio</dt>
              <dd class="mt-1 text-sm text-gray-900 leading-relaxed"><%= u?.domicilio || '—' %></dd>
            </div>

            <!-- Estado (badge) -->
            <div class="mt-3">
              <% if (activo) { %>
                <span class="inline-flex items-center rounded-full bg-green-50 px-2.5 py-0.5 text-xs font-medium text-green-700 ring-1 ring-green-100">Activo</span>
              <% } else { %>
                <span class="inline-flex items-center rounded-full bg-red-50 px-2.5 py-0.5 text-xs font-medium text-red-700 ring-1 ring-red-100">Inactivo</span>
              <% } %>
            </div>
          </div>
        </div>
      </div>


      <!-- === Horario detallado del empleado === -->
      <% if (u?.nombre_horario) { %>
        <% 
          // Helper para formatear 'HH:MM:SS' -> 'HH:MM'
          const fmt = (t) => t ? String(t).slice(0, 5) : null;

          // Config de días y claves que vienen de la tabla horarios_semanales
          const dias = [
            { key: 'lun', label: 'Lunes' },
            { key: 'mar', label: 'Martes' },
            { key: 'mie', label: 'Miércoles' },
            { key: 'jue', label: 'Jueves' },
            { key: 'vie', label: 'Viernes' },
            { key: 'sab', label: 'Sábado' },
            { key: 'dom', label: 'Domingo' },
          ];
        %>

        <div class="mt-4 rounded-2xl border border-emerald-200 p-3">
          <h2 class="text-xl font-semibold text-gray-900">
            <%= u?.nombre_horario %>
          </h2>
          <span class="inline-flex items-center gap-2 rounded-full bg-emerald-50 px-2.5 py-0.5 text-xs font-medium text-emerald-700 mb-3">
            Activo
          </span>

          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-3">
            <% dias.forEach(d => {
                const e  = u?.[`${d.key}_entrada`];
                const s  = u?.[`${d.key}_salida`];
                const ci = u?.[`${d.key}_comida_ini`];
                const cf = u?.[`${d.key}_comida_fin`];

                const rango  = (e && s)  ? `${fmt(e)}–${fmt(s)}` : '—';
                const comida = (ci && cf) ? `(comida ${fmt(ci)}–${fmt(cf)})` : '';
            %>
              <div class="rounded-xl border border-gray-200 bg-white px-4 py-2 text-sm text-gray-800 shadow-sm">
                <div class="font-semibold text-center"><%= rango %></div>
                <div class="text-center text-gray-600"><%= d.label %><%= comida ? comida : '' %></div>
              </div>
            <% }) %>
          </div>
        </div>
      <% } else { %>
        <p class="mt-4 text-sm font-semibold text-red-600">Sin horario asignado</p>
      <% } %>

    </section>
    

    <!-- Historial -->
    <section class="bg-white rounded-2xl border border-gray-200 p-5">
      <h3 class="text-lg font-semibold text-gray-800 mb-4">Historial de entradas y salidas</h3>
      <% if (typeof historial !== 'undefined' && Array.isArray(historial) && historial.length) { %>
        <ul class="divide-y divide-gray-200 text-sm">
          <% historial.forEach(mov => { %>
            <li class="py-3 flex justify-between items-center">
              <div class="flex items-center gap-2">
                <span class="w-3 h-3 <%= mov.tipo === 'Entrada' ? 'bg-green-500' : 'bg-red-500' %> rounded-full"></span>
                <%= mov.tipo %>
              </div>
              <span class="text-gray-500"><%= new Date(mov.fecha_hora).toLocaleString('es-MX') %></span>
            </li>
          <% }) %>
        </ul>
      <% } else { %>
        <p class="text-sm text-gray-500">Sin movimientos recientes.</p>
      <% } %>
    </section>
  <% } %>
</main>

<!-- ===================== Modal: Asignar horario (minimal y bonito) ===================== -->
<div id="modalAsignarHorario" class="fixed inset-0 z-[60] hidden">
  <!-- Backdrop -->
  <div class="absolute inset-0 bg-black/40 backdrop-blur-sm" data-modal-close></div>

  <!-- Contenedor centrado -->
  <div class="absolute inset-0 flex items-center justify-center p-4">
    <div class="w-full max-w-lg rounded-2xl bg-white shadow-2xl ring-1 ring-black/5 overflow-hidden">
      <!-- Header -->
      <div class="flex items-center gap-3 p-4 border-b border-gray-200 bg-gradient-to-r from-emerald-600 to-emerald-500">
        <div class="flex h-9 w-9 items-center justify-center rounded-xl bg-white/15">
          <!-- Icono calendario -->
          <svg class="h-5 w-5 text-white" viewBox="0 0 24 24" fill="none" aria-hidden="true">
            <path d="M7 3v3M17 3v3M4 9h16M5 20h14a1 1 0 0 0 1-1V8a1 1 0 0 0-1-1H5a1 1 0 0 0-1 1v11a1 1 0 0 0 1 1Z" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
          </svg>
        </div>
        <div class="flex-1">
          <h3 class="text-base font-semibold text-white leading-tight">
            Asignar horario a <%= u ? (u.nombre + ' ' + (u.apellido_paterno || '')) : '' %>
          </h3>
          <p class="text-xs text-white/80">Selecciona el horario y define el nombre del puesto.</p>
        </div>
        <button type="button" class="p-2 rounded-lg text-white/90 hover:bg-white/10" data-modal-close aria-label="Cerrar">
          ✕
        </button>
      </div>

      <!-- Body -->
      <form id="formAsignarHorario" action="/puestos/asignar" method="POST" class="p-5 space-y-5">
        <!-- Oculto para backend -->
        <input type="hidden" name="id_usuario" value="<%= u?.id_usuario %>">

        <!-- Nombre del puesto -->
        <div>
          <label for="nombre_puesto" class="block text-sm font-medium text-gray-700 mb-1">
            Nombre del puesto
          </label>
          <input
            type="text"
            id="nombre_puesto"
            name="nombre_puesto"
            placeholder="Ej. Operador, Administrativo, Soporte"
            class="w-full rounded-lg border-gray-300 placeholder-gray-400
                   focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500"
            required
          >
          <p class="mt-1 text-xs text-gray-500">Este texto se guardará en la tabla <code>puesto.nombre_puesto</code>.</p>
        </div>

        <!-- Seleccionar horario existente -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Horario existente</label>
          <select
            name="id_horario"
            id="selHorario"
            class="w-full rounded-lg border-gray-300 focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500"
            required
          >
            <option value="">— Selecciona un horario —</option>
            <% if (horarios && horarios.length) { %>
              <% horarios.forEach(h => { %>
                <option value="<%= h.id_horario %>"><%= h.nombre_horario %></option>
              <% }) %>
            <% } else { %>
              <option disabled>(No hay horarios cargados)</option>
            <% } %>
          </select>
          <p class="mt-1 text-xs text-gray-500">Se insertará solo el <code>id_horario</code> en la tabla <code>puesto</code>.</p>
        </div>

        <!-- Footer -->
        <div class="flex items-center justify-end gap-3 pt-2">
          <button type="button"
                  class="px-4 py-2 rounded-lg border border-gray-300 text-gray-700 hover:bg-gray-50"
                  data-modal-close>
            Cancelar
          </button>
          <button type="submit"
                  class="inline-flex items-center gap-2 rounded-lg bg-green-600 px-4 py-2 text-white
                        font-semibold shadow hover:bg-emerald-700 focus:outline-none focus:ring-2
                        focus:ring-emerald-500 focus:ring-offset-2">
            <svg class="h-4 w-4" viewBox="0 0 24 24" fill="none" aria-hidden="true">
              <path d="M5 12h14M12 5v14" stroke="currentColor" stroke-width="1.8" stroke-linecap="round"/>
            </svg>
            Guardar asignación
          </button>
        </div>

      </form>
    </div>
  </div>
</div>


<!-- SweetAlert2 -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
  function editarUsuario(id) {
    Swal.fire({
      title: 'Editar usuario',
      text: `Aquí redirigirías al formulario de edición del ID ${id}.`,
      icon: 'info',
      confirmButtonText: 'Ok'
    });
  }

  function darDeBaja(id) {
    Swal.fire({
      title: "¿Estás seguro?",
      text: `Esta acción dará de baja al usuario #${id}.`,
      icon: "warning",
      input: "password",
      inputPlaceholder: "Introduce tu contraseña",
      showCancelButton: true,
      confirmButtonColor: "#d33",
      cancelButtonColor: "#3085d6",
      confirmButtonText: "Sí, dar de baja",
      cancelButtonText: "Cancelar",
      preConfirm: (password) => {
        if (!password) {
          Swal.showValidationMessage("Debes ingresar la contraseña");
        }
        return password;
      }
    }).then((result) => {
      if (result.isConfirmed) {
        Swal.fire("Éxito", "Usuario dado de baja correctamente", "success");
      }
    });
  }

  // ===================== NUEVO: lógica modal y submit simulado =====================
  // Abrir modal
  document.querySelectorAll('[data-open-modal]').forEach(btn => {
    btn.addEventListener('click', () => {
      const id = btn.getAttribute('data-open-modal');
      document.getElementById(id)?.classList.remove('hidden');
      document.body.classList.add('overflow-hidden');
    });
  });

  // Cerrar modal
  document.querySelectorAll('[data-modal-close]').forEach(el => {
    el.addEventListener('click', () => {
      const modal = document.getElementById('modalAsignarHorario');
      modal?.classList.add('hidden');
      document.body.classList.remove('overflow-hidden');
    });
  });

  

  
</script>

<%- include('Plantilla/Final') %>
