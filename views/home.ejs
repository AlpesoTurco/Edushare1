<%- include ('Plantilla/Inicio') %>

        <!-- Sección control y KPIs -->
        <section class="grid grid-cols-1 lg:grid-cols-3 gap-4 mb-6">
          <div class="bg-white rounded-2xl p-5 shadow-sm border border-gray-200">
            <h2 class="text-lg font-semibold text-gray-900">Control de Acceso</h2>
            <p class="text-sm text-gray-500 mb-4">Operación inmediata del torniquete.</p>
            <button id="openGateBtn" class="w-full bg-blue-600 text-white font-medium px-4 py-3 rounded-lg hover:bg-blue-700">
              Abrir torniquete
            </button>
            <p id="gateHint" class="mt-3 text-xs text-gray-500">Último comando: 2025-08-11 09:00</p>
          </div>

          <!-- Modal: Abrir torniquete -->
          <div id="modalAbrirTorniquete" class="fixed inset-0 z-[70] hidden">
            <div class="absolute inset-0 bg-black/40 backdrop-blur-sm" data-modal-close></div>

            <div class="absolute inset-0 flex items-center justify-center p-4">
              <div class="w-full max-w-md rounded-2xl bg-white shadow-2xl ring-1 ring-black/5 overflow-hidden">
                <div class="flex items-center justify-between p-4 border-b border-gray-200">
                  <h3 class="text-base font-semibold text-gray-900">Abrir torniquete</h3>
                  <button type="button" class="p-2 rounded-lg hover:bg-gray-100" data-modal-close aria-label="Cerrar">✕</button>
                </div>

                <form id="formAbrirTorniquete" class="p-4 space-y-4">
                  <!-- Usuario -->
                  <div>
                    <label for="selUsuarioAcceso" class="block text-sm font-medium text-gray-700 mb-1">Usuario</label>
                    <select id="selUsuarioAcceso" name="id_usuario"
                            class="w-full rounded-lg border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500" required>
                      <option value="">— Selecciona —</option>
                      <% if (typeof usuariosActivos !== 'undefined' && usuariosActivos?.length) { %>
                        <% usuariosActivos.forEach(u => { %>
                          <option value="<%= u.id_usuario %>"><%= u.nombre_completo %></option>
                        <% }) %>
                      <% } else { %>
                        <option disabled>(No hay usuarios activos)</option>
                      <% } %>
                    </select>
                  </div>

                  <!-- Motivo -->
                  <div>
                    <label for="selMotivoAcceso" class="block text-sm font-medium text-gray-700 mb-1">Motivo</label>
                    <select id="selMotivoAcceso" name="motivofk"
                            class="w-full rounded-lg border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500" >
                      <option value="">— Selecciona —</option>
                      <% if (typeof motivos !== 'undefined' && motivos?.length) { %>
                        <% motivos.forEach(m => { %>
                          <option value="<%= m.id_motivo %>"><%= m.nombre_motivo %></option>
                        <% }) %>
                      <% } else { %>
                        <option disabled>(No hay motivos disponibles)</option>
                      <% } %>
                    </select>
                  </div>

                  <!-- Observaciones -->
                  <div>
                    <label for="observacionesAcceso" class="block text-sm font-medium text-gray-700 mb-1">Observaciones</label>
                    <textarea id="observacionesAcceso" name="observaciones" rows="3" maxlength="200"
                              placeholder="Ej. Acceso de cortesía / Falla de tarjeta / Invitado con autorización"
                              class="w-full rounded-lg border-gray-300 placeholder-gray-400
                                    focus:ring-2 focus:ring-blue-500 focus:border-blue-500" ></textarea>
                    <p class="mt-1 text-xs text-gray-500">Máx. 200 caracteres.</p>
                  </div>

                  <div class="flex items-center justify-end gap-2">
                    <button type="button" class="px-4 py-2 rounded-lg border border-gray-300 text-gray-700 hover:bg-gray-50" data-modal-close>
                      Cancelar
                    </button>
                    <button type="submit" class="px-4 py-2 rounded-lg bg-blue-600 text-white font-medium hover:bg-blue-700">
                      Confirmar apertura
                    </button>
                  </div>
                </form>
              </div>
            </div>
          </div>


          <div class="bg-white rounded-2xl p-5 shadow-sm border border-gray-200">
  <h2 class="text-lg font-semibold text-gray-900 mb-4">Último acceso</h2>

        <% if (ultimoAcceso) { %>
          <div class="flex items-center">
            <img src="https://i.pravatar.cc/80?u=<%= ultimoAcceso.id_usuario %>" alt="Foto"
                class="w-14 h-14 rounded-xl border border-gray-200 object-cover">
            <div class="ml-4">
              <div class="font-medium text-gray-900"><%= ultimoAcceso.nombre_completo %></div>
              <div class="text-sm text-gray-500">Puesto: <%= ultimoAcceso.nombre_puesto %></div>
              <div class="text-xs text-gray-400 mt-1">
                Hora: <span class="text-gray-700"><%= String(ultimoAcceso.hora).slice(0,5) %></span>
                • Dispositivo: <span class="text-gray-700"><%= ultimoAcceso.nombre_dispositivo %></span>
              </div>
            </div>
          </div>
        <% } else { %>
          <p class="text-sm text-gray-500">Sin registros de acceso.</p>
        <% } %>
      </div>


          <div class="grid grid-cols-1 sm:grid-cols-3 gap-3 mb-4">
            <div class="rounded-xl border p-4 bg-white">
              <p class="text-xs text-gray-500">Asistencias hoy</p>
              <p class="text-2xl font-semibold"><%= kpis.asistencias_hoy || 0 %></p>
            </div>
            <div class="rounded-xl border p-4 bg-white">
              <p class="text-xs text-gray-500">Incidencias pendientes</p>
              <p class="text-2xl font-semibold"><%= kpis.incidencias_pendientes || 0 %></p>
            </div>
            <div class="rounded-xl border p-4 bg-white">
              <p class="text-xs text-gray-500">Permisos pendientes</p>
              <p class="text-2xl font-semibold"><%= kpis.permisos_pendientes || 0 %></p>
            </div>
          </div>

        </section>

        <!-- Actividad reciente -->
        <section id="actividad" class="bg-white rounded-2xl p-5 shadow-sm border border-gray-200">
          <div class="rounded-2xl border bg-white p-4">
            <h3 class="text-sm font-semibold text-gray-900 mb-3">Últimas asistencias Hoy</h3>
            <div class="overflow-x-auto">
              <table class="min-w-full text-sm">
                <thead class="text-left text-gray-600">
                  <tr>
                    <th class="py-2 pr-4">Usuario</th>
                    <th class="py-2 pr-4">Motivo</th>
                    <th class="py-2 pr-4">Entrada</th>
                    <th class="py-2 pr-4">Programada</th>
                    <th class="py-2 pr-4">Δ (h:m)</th>
                    <th class="py-2 pr-4">Estado</th>
                    <th class="py-2 pr-4">Dispositivo</th>
                    <th class="py-2">Observaciones</th>
                  </tr>
                </thead>

                <tbody class="divide-y">
                  <% asistenciasRecientes.forEach(a => { 
                    //Nombre del motivo me falta
                      // Normaliza fecha que puede venir como Date o string
                      const fechaTxt = a.fecha?.toISOString ? a.fecha.toISOString().slice(0,10) : (a.fecha || '—');
                      // Mapea colores del "semáforo"
                      const estado = a.estado || '—';
                      const chipCls = estado === 'A tiempo'
                          ? 'bg-green-50 text-green-700 border-green-200'
                          : estado === 'Fuera de tiempo'
                            ? 'bg-red-50 text-red-700 border-red-200'
                            : 'bg-gray-50 text-gray-700 border-gray-200';
                      // Dif y observaciones
                      const dif = (a.dif_minutos === null || a.dif_minutos === undefined) ? '—' : a.dif_minutos;
                      const obsFull = a.observaciones || '';
                      const obs = obsFull.length > 60 ? (obsFull.slice(0,60) + '…') : (obsFull || '—');

                      const difMinRaw = (a.dif_minutos === null || a.dif_minutos === undefined) ? null : Number(a.dif_minutos);
                      const formatHM = (mins) => {
                        if (mins === null || mins === undefined || isNaN(mins)) return '—';
                        const sign = mins < 0 ? '-' : '';
                        const m = Math.abs(Math.trunc(mins));
                        const h = Math.floor(m / 60);
                        const mm = m % 60;
                        return h ? `${sign}${h}h ${mm}m` : `${sign}${mm}m`;
                      };
                      const difHM = formatHM(difMinRaw);
                  %>
                    <tr>
                      <td class="py-2 pr-4"><%= a.usuario %></td>

                      <td class="py-2 pr-4 font-mono"><%= a.nombre_motivo || '—' %></td>

                      <td class="py-2 pr-4 font-mono">
                        <%= a.hora || '—' %>
                        <% if (a.es_primera === 0) { %>
                          <span class="ml-2 px-1.5 py-0.5 text-[10px] rounded bg-gray-100 text-gray-600 border border-gray-200"
                                title="No es la primera marca del día">2ª</span>
                        <% } %>
                      </td>

                      <td class="py-2 pr-4 font-mono"><%= a.hora_programada || '—' %></td>

                      <td class="py-2 pr-4" title="<%= (difMinRaw ?? '—') %> min"><%= difHM %></td>

                      <td class="py-2 pr-4">
                        <span class="px-2.5 py-1 rounded-full text-xs font-medium border <%= chipCls %>">
                          <%= estado %>
                        </span>
                      </td>

                      
                      <td class="py-2 pr-4"><%= a.nombre_dispositivo || '—' %></td>

                      <td class="py-2" title="<%- obsFull.replace(/"/g, '&quot;') %>"><%- obs %></td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>

            </div>
          </div>

        </section>

        <ul class="mt-4 grid sm:grid-cols-2 gap-2">
          <% dispositivos.forEach(d => { %>
            <li class="rounded-xl border bg-white p-3">
              <p class="text-sm font-medium text-gray-900"><%= d.nombre_dispositivo %></p>
              <p class="text-xs text-gray-500"><%= d.ubicacion || '—' %></p>
            </li>
          <% }) %>
        </ul>



       <script>
  // Utilidades de abrir/cerrar modal
  const openGateBtn = document.getElementById('openGateBtn');
  const modalAbrir  = document.getElementById('modalAbrirTorniquete');
  const gateHintEl  = document.getElementById('gateHint');

  const closeModal = () => {
    modalAbrir?.classList.add('hidden');
    document.body.classList.remove('overflow-hidden');
  };

  openGateBtn?.addEventListener('click', () => {
    modalAbrir?.classList.remove('hidden');
    document.body.classList.add('overflow-hidden');
  });

  modalAbrir?.querySelectorAll('[data-modal-close]').forEach(el => {
    el.addEventListener('click', closeModal);
  });

  // Enviar comando
  const formAbrirTorniquete = document.getElementById('formAbrirTorniquete');
  formAbrirTorniquete?.addEventListener('submit', async (e) => {
    e.preventDefault();

    const selUsuario       = document.getElementById('selUsuarioAcceso');
    const selMotivo        = document.getElementById('selMotivoAcceso');
    const txtObservaciones = document.getElementById('observacionesAcceso');
    const submitBtn        = formAbrirTorniquete.querySelector('button[type="submit"]');

    const id_usuario   = parseInt(selUsuario?.value || '', 10);
    const motivofk     = parseInt(selMotivo?.value || '', 10);
    const observaciones = (txtObservaciones?.value || '').trim();

    // Validaciones mínimas
    if (!id_usuario || !motivofk) {
      if (typeof Swal !== 'undefined') {
        Swal.fire('Faltan datos', 'Selecciona usuario y motivo.', 'warning');
      }
      return;
    }
    if (!observaciones) {
      if (typeof Swal !== 'undefined') {
        Swal.fire('Faltan datos', 'Agrega observaciones.', 'warning');
      }
      return;
    }
    if (observaciones.length > 200) {
      if (typeof Swal !== 'undefined') {
        Swal.fire('Muy largo', 'Observaciones máximo 200 caracteres.', 'info');
      }
      return;
    }

    // Estado "cargando"
    const prevText = submitBtn?.textContent;
    submitBtn && (submitBtn.disabled = true, submitBtn.textContent = 'Enviando...');

    try {
      const resp = await fetch('/acceso/abrir', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ id_usuario, motivofk, observaciones })
      });

      const data = await resp.json().catch(() => ({}));
      if (!resp.ok || !data.ok) {
        throw new Error(data.msg || `HTTP ${resp.status}`);
      }

      // Feedback
      if (typeof Swal !== 'undefined') {
        await Swal.fire({
          icon: 'success',
          title: 'Comando enviado',
          text: 'El torniquete se abrirá.',
          timer: 1400,
          showConfirmButton: false
        });
      }

      // Actualizar "Último comando"
      if (gateHintEl) {
        const ts = new Date(data.at || Date.now())
          .toLocaleString('es-MX', { timeZone: 'America/Mexico_City' });
        gateHintEl.textContent = `Último comando: ${ts}`;
      }

      closeModal();
      formAbrirTorniquete.reset();
    } catch (e2) {
      console.error(e2);
      if (typeof Swal !== 'undefined') {
        Swal.fire('Error', 'No se pudo enviar el comando.', 'error');
      }
    } finally {
      // Restaurar botón
      if (submitBtn) {
        submitBtn.disabled = false;
        submitBtn.textContent = prevText || 'Confirmar apertura';
      }
    }
  });

  // (Opcional) cerrar con ESC
  document.addEventListener('keydown', (ev) => {
    if (ev.key === 'Escape' && !modalAbrir?.classList.contains('hidden')) {
      closeModal();
    }
  });
</script>


